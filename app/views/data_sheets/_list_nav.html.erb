<% if !defined? show_new then show_new = false end %>
<% if !defined? show_edit then show_edit = false end %>
<% if !defined? show_back then show_back = false end %>
<table>
  <tr>
    <% if show_new %>
    <td class="user_nav"><%= link_to 'New Data Sheet', new_globe_profile_data_sheet_path(@globe, @profile) %></td>
    <% end %>
    <% if show_edit %>
    <td class="user_nav"><%= link_to 'Edit Data Sheet', edit_globe_profile_data_sheet_path(@globe, @profile) %></td>
    <% end %>
    <% if show_back %>
    <td class="user_nav"><%= link_to 'List Data Sheets', globe_profile_data_sheets_path %></td>
    <% end %>
  </tr>
</table>
