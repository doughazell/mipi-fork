<%= form_for [@globe, @profile, @data_sheet] do |f| %>
  <% if @data_sheet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@data_sheet.errors.count, "error") %> prohibited this data_sheet from being saved:</h2>

      <ul>
      <% @data_sheet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table>
  <th>Data</th><th>Value</th>
  <tr>
    <td>Name</td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td>Display Name</td>
    <td><%= f.text_field :display_name %></td>
  </tr>
  <tr>
    <td>File Location</td>
    <td><%= f.text_field :file_location %></td>
  </tr>
  <tr>
    <td>Style Sheet</td>
    <%
if @data_sheet.name.blank? then
  css_value = "/stylesheets/custom_style/#{@globe.globe_reference}/#{@globe.globe_reference}.css"
else
  css_value = @data_sheet.style_sheets
end
    %>
    <td><%= f.text_field :style_sheets, :value => css_value %></td>
  </tr>
  <tr>
    <td>Profile</td>
    <td><%= @profile.name %></td>
  </tr>
  <tr>
    <td colspan="2"><%= f.submit %></td>
  </tr>
</table>
<% end %>
