<div class="config_area">
<table>
  <tr>
    <th colspan="2">Sign In Details</th>
  </tr>


<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <tr>
    <td><%= f.label :email %></td><td><%= f.text_field :email %></td>
  </tr>

  <tr>
    <td><%= f.label :password %></td><td><%= f.password_field :password %></td>
  </tr>

  <% if devise_mapping.rememberable? -%>
  <tr>
    <td colspan="2"><%= f.check_box :remember_me %> <%= f.label :remember_me %></td>
  </tr>
  <% end -%>

  <tr>
    <td colspan="2"><%= f.submit "Sign In" %></td>
  </tr>
<% end %>

</table>

<%= render :partial => "devise/shared/links" %>
</div>