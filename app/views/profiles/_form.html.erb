<%= form_for([@globe, @profile]) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table>
  <th>Data</th>
  <th>Value</th>
  <tr>
    <td><%= f.label :name %></td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td>Globe</td>
    <td><%= f.label @profile.globe.name %></td>
  </tr>
  <tr>
    <td>Data Sheets</td>
    <td>
    <%= f.fields_for :data_sheets do |builder| %>
      <%= render "data_sheet_fields", :f => builder %>
    <% end %>
    <p><%= link_to_add_fields "Add Data Sheet", f, :data_sheets %></p>
    </td>
  <tr>
<!--    <td colspan="2" align="center"><%= f.submit 'Create Profile', :class => 'user_nav' %></td> -->
    <td colspan="2" align="center"><%= f.submit %></td>
  </tr>
</table>
  
<% end %>
