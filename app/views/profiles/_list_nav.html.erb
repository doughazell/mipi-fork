<% if !defined? show_new then show_new = false end %>
<% if !defined? show_edit then show_edit = false end %>
<% if !defined? show_back then show_back = false end %>
<table>
  <tr>
    <% if show_new %>
    <td class="user_nav"><%= link_to 'New Profile', new_globe_profile_path(@globe, @profile) %></td>
    <% end %>
    <% if show_edit %>
    <td class="user_nav"><%= link_to 'Edit Profile', edit_globe_profile_path(@globe, @profile) %></td>
    <% end %>
    <% if show_back %>
    <td class="user_nav"><%= link_to 'List Profiles', globe_profiles_path %></td>
    <% end %>
  </tr>
</table>
