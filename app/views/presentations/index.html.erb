<div class="config_area">
<%= render "/presentations/the_top_line" %>
<table>
  <th>Associations (Data Sheet to Data Element)</th>
  <th colspan="2">Options</th>
  
<% @presentations.each do |presentation| %>
  <tr>
    <td><%= link_to "#{presentation.data_sheet.name} to #{presentation.data_element_collection.name} as #{presentation.data_element_collection.variable_name}", globe_presentation_path(@globe, presentation)  %></td>
    <td><%= link_to image_tag('edit.png', :height => 30), edit_globe_presentation_path(@globe, presentation) %></td>
    <td><%= link_to image_tag('remove.png', :height => 30), [@globe, presentation], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= link_to "New", new_globe_presentation_path(@globe) %>
<%= render "/presentations/the_bottom_line" %>
</div>